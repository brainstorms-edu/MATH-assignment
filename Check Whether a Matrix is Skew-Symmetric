#include <stdio.h>
#include <stdbool.h>

#define MAX 100

void transpose(int trans[MAX][MAX], int mat[MAX][MAX], int n)
{
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            trans[j][i] = mat[i][j];
}


bool isSkewSymmetric(int trans[MAX][MAX], int mat[MAX][MAX], int n)
{
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if (mat[i][j] != -trans[i][j])
                return false;
        }
    }
    return true;
}


void printMatrix(int mat[MAX][MAX], int n)
{
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
            printf("%d ", mat[i][j]);
        printf("\n");
    }
}

int main()
{
    int n;
    int mat[MAX][MAX], trans[MAX][MAX];

    printf("Enter size of square matrix (n): ");
    scanf("%d", &n);

    printf("Enter elements of the matrix:\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &mat[i][j]);


    transpose(trans, mat, n);

    printf("\nTranspose Matrix:\n");
    printMatrix(trans, n);


    if (isSkewSymmetric(trans, mat, n))
        printf("\nThe matrix is skew-symmetric.\n");
    else
        printf("\nThe matrix is NOT skew-symmetric.\n");

    return 0;
}
